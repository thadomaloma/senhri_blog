<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to Senhri</h1>
    <p class="lead">Senhri is social media app built just for you.</p>
    <hr class="my-4">
    <% if !user_signed_in?%>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="/users/sign_up" role="button">Sign Up</a>
            <a class="btn btn-primary btn-lg" href="/users/sign_in" role="button">Log In</a>
            <a class="btn btn-primary btn-lg" href="/users/sign_in", home_guest_sign_in_path, method: :post role="button">Guest Login</a>
        </p>
    <% end %>
</div>

<% if user_signed_in? %>
    <div class="row">
        <div class="col-md-2 col-md-offset-5">
            <%= button_to "Create Post", new_post_path, method: :get, class: "btn-primary btn" %>
        </div>
    </div>
    <% if @posts.any? %>
        <div>
            <h3 class="text-center">Here are the trending posts</h3>
            <%= will_paginate @posts%>
                <ul>
                    <% @posts.each do |post| %>
                        <%= render post %>
                        <br>
                        <hr>
                    <% end %>
                </ul>
            <%= will_paginate @posts%>
        </div>
    <% end %>
<% end %>
